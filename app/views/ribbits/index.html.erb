<div class="small-12 column">
<h2>Public Ribbits</h2>
</div>
  <% if current_user %>
    <div class="small-12 column panel">
        <p>
          <%= form_for @ribbit do |f| %>
            <%= f.text_area :content %>
            <%= f.submit "Ribbit!", class: "button" %>
          <% end %>
        </p>
    </div>
  <% end %>

  <!-- Ribbit Feed -->
    <% @ribbits.each do |ribbit| %>
    <div class="small-12 medium-6 column">
      <div class="small-3 column">
      <ul class="no-bullet">
        <ul class="no-bullet text-center">
          <li><img src="<%= ribbit.user.avatar_url %>"></li>
          <li><%= link_to "@" + ribbit.user.username, student_path(ribbit.user) %></li>
        </ul>
      </div>
      <div class="small-9 column panel">
        <ul class="no-bullet">
          <li><%= ribbit.content %></li>
          <li><small><%= time_ago_in_words(ribbit.created_at) %> ago</small></li>
        </ul>
      </ul>
      </div>
    </div>
  <!-- end of Ribbit Feed -->
    <% end %>


