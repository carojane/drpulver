<div class="row">
  <div class="small-8 column">
    <div>
      <h2>Public Ribbits</h2>
      </div>
      <% @ribbits.each do |ribbit| %>
          <div class="row panel">
            <div class="small-4 column">
                <ul>
                <a href="<%= student_path(ribbit.user.id) %>">
                <li><img class="avatar" src="<%= ribbit.user.avatar_url %>"></li>
                <li><span class="name"><%= ribbit.user.name %></span></li>
                </a>
                <li>@<%= ribbit.user.username %></li>
                </ul>
            </div>

            <div class="small-8 column">
                <p class="text-right">
                <%= time_ago_in_words(ribbit.created_at) %>
                </p>
                <p> <%= ribbit.content %> </p>
            </div>
          </div>
      <% end %>
  </div>

  <% if current_user %>
    <div class="small-4 column panel">
        <p>
          <%= form_for @ribbit do |f| %>
            <%= f.text_area :content %>
            <%= f.submit "Ribbit!", class: "button" %>
          <% end %>
        </p>
    </div>
  </div>
  <% end %>
</div>
