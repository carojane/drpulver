<div class="row">
  <div id="ribbits" class="small-8 column">
    <div>
      <div class="row panel">
        <h2>My Profile</h2>
      </div>
      <div class="row panel">
        <img src="<%= @student.avatar_url %>">
        <span class="name"><%= @student.name %></span>
        @<%= @student.username %>
        <ul class="inline-list">
          <li><%= @student.ribbits.size %> Ribbits</li>
          <li>XX Followers</li>
          <li>XX Following</li>
        </ul>
      </div>
    </div>
  <div>
    <div class="row panel">
      <h2>My Ribbits</h2>
    </div>
      <% @student.ribbits.each do |ribbit| %>
      <div class="row panel">
        <div class="small-4 column">
          <ul>
            <li>
              <img class="avatar" src="<%= @student.avatar_url %>">
            </li>
            <li>
              <span class="name"><%= @student.name %></span>
            </li>
            <li>
              @<%= @student.username %>
            </li>
          </ul>
        </div>

        <div class="small-8 column">
            <p class="text-right">
            <%= time_ago_in_words(ribbit.created_at) %>
            </p>
            <p> <%= ribbit.content %> </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
  <% if current_user %>
  <div class="small-4 column panel">
      <p>
        <%= form_for @ribbit do |f| %>
          <%= f.text_area :content %>
          <%= f.submit "Ribbit!", class: "button" %>
        <% end %>
      </p>
  </div>
</div>
<% end %>
