<div class="row">
  <div id="ribbits" class="small-8 column">
    <div class="panel">
      <div class="panel">
        <h2>My Profile</h2>
      </div>
      <div class="panel">
        <img src="<%= @student.avatar_url %>">
        <span class="name"><%= @student.name %></span>
        @<%= @student.username %>
        <ul class="inline-list">
          <li><%= @student.ribbits.size %> Ribbits</li>
          <li>XX Followers</li>
          <li>XX Following</li>
        </ul>
      </div>
    </div>
   <div class="panel">
      <h2>My Ribbits</h2>

    <% @student.ribbits.each do |ribbit| %>
        <div class="panel">
            <img src="<%= @student.avatar_url %>">
            <span class="name"><%= @student.name %></span>
            @<%= @student.username %>
            <span class="time"><%= time_ago_in_words(ribbit.created_at) %></span>
            <p> <%= ribbit.content %> </p>
    </div>
    <% end %>



    </div>
  </div>
  <% if current_user %>
  <div class="small-4 column panel">
    <div class="panel">
      <h2>Ribbit</h2>
    </div>
    <div class="panel">
      <p>
        <%= form_for @ribbit do |f| %>
          <%= f.text_area :content %>
          <%= f.submit "Ribbit!" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
<% end %>
