<ul>
  <% @students.each do |student| %>
    <div class="small-4 medium-3 large-2 column">
      <ul class="no-bullet">
        <li class="text-center">
          <img src="<%= student.user.avatar_url %>">
        </li>
        <li class="text-center">
          <%= link_to "@" + student.user.username,
                            student_path(student.user.id) %>
        </li>
        <li class="text-center"><%= student.user.ribbits.size %> Ribbits</li>
      </ul>
    </div>
  <% end %>
</ul>
