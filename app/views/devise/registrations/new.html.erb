<div class="small-10 medium-6 column">
<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username, class: "left"  %>
  <small class="right">Required</small>
  <%= f.text_field :username, autofocus: true %></div>

  <div><%= f.label :email, class: "left" %>
  <small class="right">Required</small>
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password, class: "left"  %>
    <% if @validatable %>
      <small class="right"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
<!-- nested form for student -->
  <%= f.fields_for :student do |s| %>
  <div>
    <%= s.label :first_name %>
    <%= s.text_field :first_name %>
  </div>
  <div>
    <%= s.label :last_name %>
    <%= s.text_field :last_name %>
  </div>
  <div>
      <%= s.label :date_of_birth %>
      <%= s.date_select :date_of_birth,
          start_year: (Time.now.year - 15),
          end_year: (Time.now.year - 65),
          order: [:month, :day, :year],
          include_blank: true %>
  </div>
  <div>
      <%= s.label :bio, "About" %>
      <%= s.text_area :bio %>
  </div>
  <% end %>
<!-- end of nested form -->
  <div><%= f.submit "Sign up", class: "button" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
